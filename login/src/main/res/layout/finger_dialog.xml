<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/hint_color"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/button_finger_print"
            style="?fingerprint_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/side_button_background"
            android:gravity="center"
            android:text="fp"
            android:theme="@style/LockScreenFingerPrintButtonStyle" />
    </FrameLayout>

    <TextView
        android:id="@+id/try_again_text_view"
        style="?title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="30dp"
        android:text="Try again (3)"
        android:theme="@style/LockScreenTitleTextStyle" />
</LinearLayout>